<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:backgroundTint="#ECF0EC"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/aciklama_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#273043"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:gravity="start"
                    android:text="Kira" />
                <TextView
                    android:id="@+id/tutar_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#CE273043"
                    android:text="5000" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/durum_c"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@drawable/custom_checkbox"
                app:useMaterialThemeColors="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tarih_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_weight="1"
                android:text="06/07/2023" />

            <TextView
                android:id="@+id/vadetarihi_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="10dp"
                android:layout_weight="1"
                android:text="30/07/2023" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>